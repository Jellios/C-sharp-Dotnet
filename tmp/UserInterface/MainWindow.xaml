<Window x:Class="UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Author:" />
            <TextBox x:Name="AuthorInput" />

            <Label Content="Date:" />
            <DatePicker x:Name="DateInput" />

            <Label Content="QuoteText:" />
            <TextBox x:Name="QuoteTextInput" AcceptsReturn="True" TextWrapping="Wrap" />

            <Button Content="Submit" Click="SubmitButton_Click" Margin="0,20,0,0" />
            <Label Content="DDD" x:Name="Testinglbl" /> 
        </StackPanel>
    </Grid>
</Window>
