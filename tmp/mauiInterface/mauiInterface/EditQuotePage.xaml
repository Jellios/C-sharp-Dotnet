<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiInterface.EditQuotePage">
    <StackLayout Margin="20">
        <Label Text="Author:" />
        <Entry x:Name="AuthorEntry" />

        <Label Text="Date:" />
        <DatePicker x:Name="DateEntry" />

        <Label Text="QuoteText:" />
        <Editor x:Name="QuoteTextEntry" />

        <Button Text="Save Changes" Clicked="SaveButton_Clicked" />
        <Button Text="Cancel" Clicked="CancelButton_Clicked" />
    </StackLayout>
</ContentPage>