<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiInterface.MainPage">

    <StackLayout Margin="20" >
        <Label Text="Author:" />
        <Entry  Text="{Binding AuthorInput }" />

        <Label Text="Date:" />
        <DatePicker  Date="{Binding DateInput }" />

        <Label Text="QuoteText:" />
        <Editor Text="{Binding NameInput }" />

      
        <Label Text="DDD" x:Name="Testinglbl" />
        <Button Text="Add Quote" Clicked="Button_Clicked"/>
        <Button Text="View all Quotes" Clicked="Button_Clicked_1"/>
        <Button Text="Add random Quotes" Clicked="Button_Clicked_2"/>
        <Button Text="DELETE ALL QUOTES" Clicked="Button_Clicked_3"/>
    </StackLayout>

</ContentPage>